<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="596" Closing="Window_Closing">
    <Grid Margin="0,0,3.6,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="401*"/>
            <ColumnDefinition Width="185*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="40" Margin="200,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376" Grid.ColumnSpan="2"/>
        <Button x:Name="bConnDisconn" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="185" Height="40"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="276" Margin="10,55,0,0" VerticalAlignment="Top" Width="566" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="74" Margin="10,336,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="566" Grid.ColumnSpan="2" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
